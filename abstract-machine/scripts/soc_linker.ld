ENTRY(_start)

MEMORY {
	mrom  : ORIGIN = 0x20000000, LENGTH = 4K
	flash : ORIGIN = 0x30000000, LENGTH = 128M
	sram  : ORIGIN = 0x0f000000, LENGTH = 8K
	psram : ORIGIN = 0x80000000, LENGTH = 4M
}

SECTIONS {
	. = ORIGIN(flash);
	.entry : {
		*(entry)
	} > flash

	. = ORIGIN(sram);
	.ssbl : {
		_ssbl_start = .;
		*(ssbl);
		_ssbl_end = .;
	} > sram AT> flash
	ssbl_load_start = .;

	. = ORIGIN(psram);
  .text : {
		_text_start = .;
    *(.text*)
  } > psram AT> flash 
	text_load_start = LOADADDR(.text);
  .rodata : {
    *(.rodata*)
  } > psram AT> flash 

  .data : {
		. = ALIGN(0x4);
		_data_start = .;
    *(.data)
  } > psram AT> flash 
	data_load_start = LOADADDR(.data);
  .bss : {
		. = ALIGN(0x4);
		_bss_start = .;
    *(.bss*)
    *(.sbss*)
    *(.scommon)
  } > psram 
  end = .;
  _end = .;
  _heap_start = ALIGN(0x1000);
}
